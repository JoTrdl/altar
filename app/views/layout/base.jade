doctype html
html(lang="en")
  head
    block meta
      meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
      meta(name='viewport', content='width=device-width, user-scalable=no')

    block head
      title= (typeof(title) == 'undefined' ? "App" : title)

    link(rel="stylesheet", href="/css/app.css", type="text/css")
    link(rel="stylesheet", href="/vendor/fontawesome/css/font-awesome.min.css", type="text/css")

    block css
      
    
    //- If dev env, add script to autoreload page when scss change
    if environment == 'development'
      script(src="//localhost:35729/livereload.js")

    script(src="/vendor/jQuery/dist/jquery.min.js")
    script(src="/vendor/exoskeleton/exoskeleton.js")

    script(src="/js/app.namespace.js")
    script(src="/js/app.utils.js")
    script(src="/js/app.router.js")
    script(src="/js/views/app.header.view.js")

    script(src="/js/app.startup.js")

    block scripts
      
    body
      block header
        include header 

      div.content
        block content

      block footer
        include footer